	<servlet>
		<servlet-name>cookies</servlet-name>
		<servlet-class>com.zl.servlet.CookiesAndSessionServlet</servlet-class>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>testServlet</servlet-name>
